@model IEnumerable<MyFirstTest.Models.Founders>
    <h1>Обновите бланк учредителя</h1>

    @foreach (var founders in Model)
    {
        if (founders.FoundersId == ViewBag.FoundersId)

        {
            <form method="post">
                <!-- Клиент -->
                <!-- ИНН -->
                <input type="hidden" value="@ViewBag.FoundersId" name="FoundersId" />
                <div class="form-group">
                    <label for="exampleInputITN">ИНН</label>
                    <input required type="number" value="@founders.ITN" class="form-control" name="ITN" id="exampleInputITN" pattern="\d{10}">
                </div>
                <!-- Наиминование -->
                <div class="form-group">
                    <label for="exampleInputCustomerName">Имя</label>
                    <input required type="text" value="@founders.FirstName" class="form-control" name="FirstName" id="exampleInputCustomerName">
                </div>
                <div class="form-group">
                    <label for="exampleInputCustomerName">Фамилия</label>
                    <input required type="text" value="@founders.LastName" class="form-control" name="LastName" id="exampleInputCustomerName">
                </div>
                <button type="submit" class="btn btn-primary">Изменить</button>

            </form>
        }

    }